@model List<Detail>

<h2>Details</h2>

<a asp-action="Create" class="btn btn-success mb-3">
    <i class="fas fa-plus"></i> Add detail
</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Price</th>
            <th>Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model)
        {
            <tr>
                <td>@detail.DetailId</td>
                <td>@detail.Name</td>
                <td>@detail.Price</td>
                <td>@detail.Amount</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@detail.DetailId" class="btn btn-link">
                        <i class="fas fa-edit" title="Update"></i>
                    </a>
                    <form asp-action="Delete" asp-route-id="@detail.DetailId" method="post" onsubmit="return confirm('Вы уверены, что хотите удалить эту услугу?');">
                        <button type="submit" class="btn btn-link text-danger">
                            <i class="fas fa-trash" title="Delete"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

