@model List<MasterTool_WebApp.Models.Request>

<h2 class="text-center mt-4">My Requests</h2>

<div class="text-right mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> New request
    </a>
</div>

<div class="container mt-4">
    <table class="table table-striped table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Problem Description</th>
                <th>Manufacturer</th>
                <th>Usage Time</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int rowNumber = 1;
                foreach (var request in Model)
                {
                    <tr>
                        <td>@rowNumber</td>
                        <td>@request.ProblemDescription</td>
                        <td>@(string.IsNullOrEmpty(request.ManufacturerName) ? "N/A" : request.ManufacturerName)</td>
                        <td>@request.UsageTime</td>
                        <td>@(request.IsOrder ? "Converted to Order" : "Pending")</td>
                    </tr>
                    rowNumber++;
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No requests found</td>
                </tr>
            }
        </tbody>
    </table>
</div>

