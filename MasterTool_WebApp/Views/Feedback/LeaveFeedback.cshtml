@model Feedback

@{
    ViewData["Title"] = "Оставить отзыв";
}

<h1>Оставить отзыв</h1>

<form asp-action="LeaveFeedback" method="post">
    <div class="form-group">
        <label asp-for="Text" class="control-label">Ваш отзыв:</label>
        <textarea asp-for="Text" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating" class="control-label">Оценка:</label>
        <select asp-for="Rating" class="form-control">
            <option value="0" selected>Выберите оценку</option>
            <option value="1">1 - Очень плохо</option>
            <option value="2">2 - Плохо</option>
            <option value="3">3 - Нормально</option>
            <option value="4">4 - Хорошо</option>
            <option value="5">5 - Отлично</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="OrderId" />

    <button type="submit" class="btn btn-primary">Отправить отзыв</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
